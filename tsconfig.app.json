{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true, // Ignora los tipos conflictivos de dependencias
    "esModuleInterop": true, // Asegura la compatibilidad con ESM y CommonJS
    "moduleResolution": "Node", // Usa la resolución de módulos adecuada
    "allowSyntheticDefaultImports": true // Permite importar módulos como si tuvieran `default`
  }
}
